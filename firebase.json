{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "**/*.py",
            "**/*.md",
            ".git/**",
            "analysis_outputs/**",
            "business/**",
            "legal/**",
            "ontology/**",
            "specs/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(json|html)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=3600"
                    }
                ]
            }
        ]
    }
}